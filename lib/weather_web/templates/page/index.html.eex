<link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/weather.css") %>"/>
<h1 class="text-info mt-3 mb-5">Weather challenge <i class="fas fa-cloud"></i></h1>
<div class="row justify-content-center">
  <%= for city <- ["Buenos Aires,ar", "Bogota,col", "Ciudad de Mexico,mx", "Madrid,es", "Lima,pe"] do %>
  <% ciudad = get_cities(city) %>
  <div class="col-2" >
    <div class="card border-info mb-3 pointer">
      <div class="card-header bg-transparent border-info font-weight-bold text-center" style="font-size: 1.5rem;"><%= ciudad["name"] %></div>
        <div class="card-body text-center">
          <h5 class="card-title temp"><i class="fas fa-thermometer-three-quarters"></i> <%= ciudad["temp"] %> Â°C</h5>
        </div>
        <div class="card-footer bg-transparent border-info text-center">
          <div>
            <span class="font-weight-bold">Humedad:</span> <%= ciudad["humidity"] %>%
            <span class="font-weight-bold">Viento:</span> <%= ciudad["wind"] %>m/s
            <%= button("More info", to: "/forecast/#{city}", class: "btn btn-outline-info btn-block btn-sm")  %>
          </div>
        </div>
    </div>
  </div>
  <%end %>
</div>
